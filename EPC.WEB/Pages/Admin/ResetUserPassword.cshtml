@page
@model EPC.WEB.Pages.Admin.ResetUserPasswordModel
@{
    ViewData["Title"] = "Reset User Password";
}

<h2>Reset User Password</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success:</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning">
        <strong>Validation Error(s):</strong>
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by Email or Employee ID" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </div>
</form>

@if (Model.Users.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Store ID</th>
                <th>Employee ID</th>
                <th>Locked Out</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr class="@(user.IsLockedOut ? "table-danger" : "")">
                    <td>@user.Email</td>
                    <td>@user.StoreId</td>
                    <td>@user.EmployeeId</td>
                    <td>@user.LockoutStatusDisplay</td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="UserId" value="@user.Id" />
                            <input type="password" name="NewPassword" placeholder="New password" class="form-control d-inline-block w-auto" required />
                            <button type="submit" class="btn btn-sm btn-warning">Reset</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No users found.</div>
}
