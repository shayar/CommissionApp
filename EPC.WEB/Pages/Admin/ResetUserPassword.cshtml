@page
@model EPC.WEB.Pages.Admin.ResetUserPasswordModel
@{
    ViewData["Title"] = "Reset User Password";
}

<h2>Reset User Password</h2>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by Email or Store ID" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </div>
</form>

@if (Model.Users.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Store ID</th>
                <th>Employee ID</th>
                <th>Locked Out</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.StoreId</td>
                    <td>@user.EmployeeId</td>
                    <td>@user.LockoutEnd?.ToLocalTime().ToString("g") ?? "No"</td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="UserId" value="@user.Id" />
                            <input type="password" name="NewPassword" placeholder="New password" class="form-control d-inline-block w-auto" required />
                            <button type="submit" class="btn btn-sm btn-warning">Reset</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No users found.</div>
}
