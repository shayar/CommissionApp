@page
@model EPC.WEB.Pages.Admin.CommissionModel
<h2>Set Commission Rate</h2>
<form method="post">
    <div class="form-group">
        <label>SubCategory</label>
        <select asp-for="SubCategoryId" class="form-control">
            @foreach (var sc in Model.SubCategories)
            {
                <option value="@sc.Id">@sc.Category.Name - @sc.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Rate (%)</label>
        <input asp-for="CommissionRate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>