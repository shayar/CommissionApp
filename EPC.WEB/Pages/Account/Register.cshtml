@page
@model EPC.WEB.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h2 class="text-center mb-4">Register for @Model.StoreName</h2>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm p-4">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <strong>There were some problems with your submission:</strong>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Input.StoreId">Store Number</label>
                    <select asp-for="Input.StoreId" asp-items="Model.StoreOptions" class="form-control">
                        <option value="">-- Select Store --</option>
                    </select>
                    <span asp-validation-for="Input.StoreId" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.EmployeeId">Employee Id</label>
                    <input asp-for="Input.EmployeeId" class="form-control" />
                    <span asp-validation-for="Input.EmployeeId" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.FullName">Full name</label>
                    <input asp-for="Input.FullName" class="form-control" />
                    <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Gender"></label>
                    <select asp-for="Input.Gender" class="form-control">
                        <option value="">-- Select Gender --</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                    <span asp-validation-for="Input.Gender" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.DateOfBirth">Date of Birth</label>
                    <input asp-for="Input.DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.JoiningDate">Joining Date</label>
                    <input asp-for="Input.JoiningDate" type="date" class="form-control" />
                    <span asp-validation-for="Input.JoiningDate" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">Register</button>
                <div class="mt-3 text-center">
                    <a asp-page="/Account/Login">Back to Login</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
