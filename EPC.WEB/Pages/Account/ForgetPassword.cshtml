@page
@model EPC.WEB.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h2 class="text-center mb-4">Forgot Password</h2>
<p class="text-muted text-center">Fill out the form below. Your request will be reviewed by an admin.</p>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">

            @* Validation summary *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <strong>There were some issues:</strong>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Input.EmployeeId"></label>
                    <input asp-for="Input.EmployeeId" class="form-control" />
                    <span asp-validation-for="Input.EmployeeId" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.StoreId"></label>
                    <input asp-for="Input.StoreId" class="form-control" />
                    <span asp-validation-for="Input.StoreId" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-warning w-100">Submit Request</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-info mt-3 text-center">
                    @Model.StatusMessage
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
