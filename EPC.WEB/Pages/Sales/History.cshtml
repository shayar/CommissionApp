@page
@model EPC.WEB.Pages.Sales.HistoryModel
<h2>Your Sales History</h2>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Category</th>
            <th>SubCategory</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Sales)
        {
            <tr>
                <td>@s.Date.ToShortDateString()</td>
                <td>@s.SubCategory.Category.Name</td>
                <td>@s.SubCategory.Name</td>
                <td>@s.Amount</td>
            </tr>
        }
    </tbody>
</table>